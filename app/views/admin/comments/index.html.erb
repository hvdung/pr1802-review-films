<table class="table cat-table">
  <thead class="thead-dark">
  <tr>
    <th scope="col"><%= t ".id" %></th>
    <th scope="col"><%= t ".author" %></th>
    <th scope="col"><%= t ".comment" %></th>
    <th scope="col"><%= t ".status" %></th>
    <th scope="col"><%= t ".action" %></th>
    <th scope="col"><%= t ".belong_to" %></th>
    <th scope="col"><%= t ".submited_on" %></th>
  </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.id %></td>
        <td><%= comment.user_name %></td>
        <td><%= comment.content %></td>
        <td>Publish</td>
        <td>
          <%= link_to t(".link_edit"), edit_admin_comment_path(comment) %> |
          <%= link_to t(".link_delete"), admin_comment_path(comment.id), method: :delete,
              data: {confirm: t(".confirm_delete")} %>
        </td>
        <td>In response to</td>
        <td><%= comment.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @comments %>
